#include <stdio.h>

int main(void) {
	int n;
	scanf("%d", &n); //몇 개의 별까지 만들지 입력
	int i;
	int j;
	int k;
	for (i = 0;i < n;i++) {
		for (j = n-1;j > i;j--) {
			printf(" "); // 각 줄에 공백 출력
		}
		for (k = 0;k <= i;k++) {
			printf("*"); // 각 줄에 별 출력
		}
		printf("\n"); // 각 줄에서 다 출력하고 줄 띄우기
	}
	return 0;
}
