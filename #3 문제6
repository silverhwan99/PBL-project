#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>


int main() {
    int N, kim, lim;            //변수 입력
    int count = 0;

    scanf("%d %d %d", &N, &kim, &lim);

    while (kim != lim) {        //계산
        kim = kim - kim / 2;
        lim = lim - lim / 2;
        count++;
    }

    printf("%d", count);
}
